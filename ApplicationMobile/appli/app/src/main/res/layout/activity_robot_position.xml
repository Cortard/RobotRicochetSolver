<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluebBg"
    tools:context=".PictureAnswerActivity">


    <Button
        android:id="@+id/btnRobotCor"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/blueBtn"
        android:fontFamily="@font/poppins_regular"
        android:shadowColor="#292626"
        android:text="@string/btnRobotCor"
        android:textAlignment="center"
        android:textColor="@color/fontColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2"
        app:layout_constraintVertical_bias="0.945" />

    <ImageView
        android:id="@+id/surfaceView"
        android:layout_width="330dp"
        android:layout_height="412dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"
        android:background="@color/blueNorm"
        app:layout_column="1"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2"
        app:layout_constraintVertical_bias="0.0"
        app:layout_row="3" />

    <ImageView
        android:id="@+id/header2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/blueHeader"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintDimensionRatio="1:0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:accessibilityHeading="false"
        android:background="@color/blueFooter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <ImageButton
        android:id="@+id/boutonHelp"
        style="@android:style/Widget.ImageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blueFooterBox"
        android:contentDescription="@string/boutonHelp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/footer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/footer"
        app:layout_constraintTop_toTopOf="@+id/footer"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/_11758_help_icon" />


    <ImageButton
        android:id="@+id/boutonReturn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blueFooterBox"
        android:contentDescription="@string/boutonExit"
        android:src="@drawable/_52473_return_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/footer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/footer"
        app:layout_constraintTop_toTopOf="@+id/footer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titreRobotCor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="10sp"
        android:text="@string/titreRobotCor"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/fontColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/header2"
        app:layout_constraintTop_toTopOf="@+id/header2"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="233dp"
        android:layout_height="325dp"
        android:layout_centerVertical="true"
        android:background="@drawable/border"
        android:padding="4dp"
        app:layout_column="1"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView"
        app:layout_constraintEnd_toEndOf="@+id/surfaceView"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/surfaceView"
        app:layout_constraintTop_toTopOf="@+id/surfaceView"
        app:layout_constraintVertical_bias="0.126"
        app:layout_row="3">

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="73dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="2"
            app:layout_row="1" />

        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_width="73dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="2" />

        <EditText
            android:id="@+id/editTextNumber7"
            android:layout_width="73dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="2"
            app:layout_row="2" />

        <EditText
            android:id="@+id/editTextNumber8"
            android:layout_width="75dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="3" />

        <EditText
            android:id="@+id/editTextNumber9"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="2"
            app:layout_row="3" />

        <EditText
            android:id="@+id/editTextNumber10"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="4" />

        <EditText
            android:id="@+id/editTextNumber11"
            android:layout_width="75dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="2"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="73dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="X"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="73dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Y"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/robotsr" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/robotsb" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/robotsj" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_column="0"
            app:layout_row="4"
            app:srcCompat="@drawable/robotsv" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Case"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Robots"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="323dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView"
        app:layout_constraintEnd_toEndOf="@+id/surfaceView"
        app:layout_constraintStart_toStartOf="@+id/surfaceView"
        app:layout_constraintTop_toTopOf="@+id/surfaceView"
        app:layout_constraintVertical_bias="0.977" />


</androidx.constraintlayout.widget.ConstraintLayout>